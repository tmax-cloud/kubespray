apiVersion: types.kubefed.io/v1beta1
kind: FederatedClusterRoleBinding
metadata:
  name: hypercloud-admin-clusterrolebinding
  namespace: kube-federation-system
spec:
  template:
    subjects:
    - kind: ServiceAccount
      name: default
      namespace: kube-federation-system
    roleRef:
      kind: ClusterRole
      name: cluster-admin
      apiGroup: rbac.authorization.k8s.io
  placement:
    clusterSelector: {}
