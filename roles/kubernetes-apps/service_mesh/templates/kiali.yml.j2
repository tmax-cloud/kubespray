apiVersion: batch/v1
kind: Job
metadata:
  name: kiali-admission-create
  labels:
    app: kiali
    release: istio
  namespace: istio-system
spec:
  template:
    metadata:
      name: kiali-admission-create
      labels:
        app: kiali
        release: istio
    spec:
      containers:
        - name: create
          image: {{ service_mesh_certgen_image_repo }}:{{ service_mesh_certgen_image_tag }}
          imagePullPolicy: IfNotPresent
          args:
            - create
            - --host=kiali,kiali.istio-system.svc
            - --namespace=istio-system
            - --secret-name=kiali-https-secret
      restartPolicy: OnFailure
      serviceAccountName: kiali-admission
      securityContext:
        runAsNonRoot: true
        runAsUser: 2000
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: kiali-ingress
  namespace: istio-system
  annotations:
    kubernetes.io/ingress.class: nginx-system
spec:
    rules:
    - host: "kiali.istio-system.{{ custom_domain_name }}"
    - http:
        paths:
        - backend:
            service:
                name: kiali
                port:
                    number: 20001
          path: /api/kiali
          pathType: ImplementationSpecific
    tls:
    - secretName: kiali-https-secret
---
